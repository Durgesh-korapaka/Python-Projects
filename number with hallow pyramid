n=int(input())
for i in range(1,n+1):
        if i==1:
            row=""
            row+= (n-1)*" " + "5 "
            print(row)
        elif i==n:
            row=""
            for j in range(n):
                row += str(5+j) + " "
            print(row)
        else:
            row=""
            left_spaces=(n-i) 
            middle_spaces=2*i - 4  
            row=left_spaces*" " + "5 " + middle_spaces * " "+str(i+4)+" "
            print(row)
